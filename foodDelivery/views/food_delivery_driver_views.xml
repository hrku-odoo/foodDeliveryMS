<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="driver_tree_view" model="ir.ui.view">
        <field name="name">driver.tree</field>
        <field name="model">food.delivery.driver</field>
        <field name="arch" type="xml">
            <tree string="Drivers">
                <field name="name"/>
                <field name="contact_info"/>
            </tree>
        </field>
    </record>

    <record id="driver_form_view" model="ir.ui.view">
        <field name="name">driver.form</field>
        <field name="model">food.delivery.driver</field>
        <field name="arch" type="xml">
            <form string="Driver Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contact_info"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
